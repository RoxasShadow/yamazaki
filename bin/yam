require 'yamazaki'
require 'optparse'
require 'colorb'

WATCH_DIR = File.join ENV['HOME'], '.watch'
options = { :keyws => '' }

OptionParser.new { |opts|
	opts.banner = "#{"Yamazaki - Moe doesn't exist in the 3D form!".cyan.bold}\n#{'Usage: yam <command> <arg>'.bold}"
        
	opts.on( '-s', '--search KEYWORDS', "Search with given keywords." ) do |key|
		options[:keyws] = key
		Yamazaki.search(key)
	end
        
	opts.on( '-h', '--help', "Display this." ) do
		puts opts
		exit
	end
        
	opts.on( '-l', '--list', "Show last 5 episodes." ) do
		Yamazaki.list
	end
}.parse!
